<div id="page-container">
  <ul class="cb-slideshow">
    <li><span><%= image_tag 'inicio/1-1.jpg' %></span></li>
    <li><span><%= image_tag 'inicio/1-2.jpg' %></span></li>
    <li><span><%= image_tag 'inicio/1-3.jpg' %></span></li>
    <li><span><%= image_tag 'inicio/1-4.jpg' %></span></li>
    <li><span><%= image_tag 'inicio/1-5.jpg' %></span></li>
    <li><span><%= image_tag 'inicio/1-6.jpg' %></span></li>
  </ul>
</div>
<div class="notransition black">
  <div class="modal fade" id="signin" name="sign" role="dialog" aria-labelledby="signinLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="signLogo osLight"><span class="fa icon-compass"></span> Me Incomoda</div>
      <div class="modal-content">
        <div class="modal-header">

          <h4 class="modal-title" id="signinLabel">Acessar</h4>
          <% if alert %>
              <div class="alert alert-danger" role="alert"><%= alert %>
                <a href="#" data-dismiss="alert" class="close">x</a>
              </div>
          <% end %>
          <% if notice %>
              <div class="alert alert-success" role="alert"><%= notice %>
                <a href="#" data-dismiss="alert" class="close">x</a>
              </div>
          <% end %>
        </div>
        <div class="modal-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, placeholder: 'Nome/Sobrenome', class: 'form-control', required: 'True' %>
              </div>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email', required: 'True' %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(minimo <%= @minimum_password_length %> caracteres)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: 'form-control', required: 'True' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Senha', class: 'form-control', required: 'True' %>
              </div>
              <div class="form-group">
                <%= f.submit "Registrar", class: "btn-group-justified" %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="signFooter">Me Incomoda - Todos os direitos reservados<br>&copy; 2015</div>
    </div>
  </div>
</div>
