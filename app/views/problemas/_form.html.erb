<%= form_for(@problema) do |f| %>
  <% if @problema.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@problema.errors.count, "error") %> prohibited this problema from being saved:</h2>

      <ul>
      <% @problema.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div id="wrapper">
      <div id="mapView" class="mob-min"><div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Carregando mapa...</div></div>
      <div id="content" class="mob-max">
        <div class="rightContainer">
          <h1>Insira um novo problema</h1>
            <div class="form-group">
              <label>Buscar Endereço<br></label>
              <%= f.text_field :endereco, class: 'form-control endereco', placeholder: "Entre com a localização", :autocomplete=>"on" %>
              <p class="help-block">Você pode arrastar o marcador para a posição desejada</p>
            </div>
            <div class="form-group">
                <label>Título</label><br>
                <%= f.text_field :titulo, class: 'form-control', required: 'True' %>
            </div>
            <div class="form-group">
              <label>Descrição</label><br>
              <%= f.text_area :descricao, rows: '4', class: 'form-control', required: 'True' %>
            </div>
            <div class="form-group">
              <button type="button" class="btn btn-gray problema_classificacao">1</button>
              <button type="button" class="btn btn-gray problema_classificacao">2</button>
              <button type="button" class="btn btn-gray problema_classificacao">3</button>
              <button type="button" class="btn btn-gray problema_classificacao">4</button>
              <button type="button" class="btn btn-gray problema_classificacao">5</button>
              <p class="help-block">Classificação <span class="value-classificacao">5</span></p>
              <%= f.hidden_field :classificacao, value: '5' %>
            </div>
            <div class="form-group">
              <label>Latitude/Longitude: <span id="latitude" class="label label-default latitude"></span> <span id="longitude" class="label label-default longitude"></span>
                  <%= f.hidden_field :lat, class: 'lat'%>
                  <%= f.hidden_field :long, class: 'long'%>
              </label>
            </div>
            <div class="form-group">
              <label>Imagem</label>
              <%= f.file_field :imagem, class: 'file file_field', 'data-show-upload' => false, 'data-show-caption' => false, 'data-show-remove'=> true, :accept=>"image/jpeg,image/png", 'data-browse-class'=>"btn btn-o btn-default", 'data-browse-label'=>"Procurar imagem", required: 'True' %>
              <p class="help-block">Você pode selecionar uma imagens por vez</p>
            </div>
            <div class="form-group">
              <%= f.submit "Adicionar", class: "btn btn-green btn-lg" %>
            </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
<% end %>
