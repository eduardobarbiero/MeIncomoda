<%# encoding: utf-8 %>
<!DOCTYPE html>
<html>
<head>
  <title>MeIncomoda</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="author" content="Católica SC">
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body  class="notransition">
<% if signed_in?%>
  <% if alert %>
      <div class="alert alert-danger" role="alert"><%= alert %>
        <a href="#" data-dismiss="alert" class="close">x</a>
      </div>
  <% end %>
  <% if notice %>
      <div class="alert alert-success" role="alert"><%= notice %>
        <a href="#" data-dismiss="alert" class="close">x</a>
      </div>
  <% end %>
<% end %>
<div class="notransition">
  <div id="header">
    <div class="logo">
      <%= link_to content_tag(:span, '', class: 'fa fa-home marker' ) + content_tag(:span, 'Início', class: 'logoText' ), '/', method: 'get' %>
    </div>
    <a href="#" class="navHandler"><span class="fa fa-bars"></span></a>
    <div class="search">
      <span class="searchIcon icon-magnifier"></span>
      <input type="text" placeholder="Procurar por problemas...">
    </div>
    <div class="headerUserWraper">
      <a href="#" class="userHandler dropdown-toggle" data-toggle="dropdown"><span class="icon-user"></span><span class="counter">5</span></a>
      <a href="#" class="headerUser dropdown-toggle" data-toggle="dropdown">
        <%= image_tag 'avatar-1.png', class: 'avatar headerAvatar pull-left', alt: 'avatar' %>
        <div class="userTop pull-left">
          <span class="headerUserName"><%= current_user.name %></span><span class="fa fa-angle-down"></span>
        </div>
        <div class="clearfix"></div>
      </a>
      <div class="dropdown-menu pull-right userMenu" role="menu">
        <div class="mobAvatar">
          <%= image_tag 'avatar-1.png', class: 'avatar mobAvatarImg', alt: 'avatar' %>
          <div class="mobAvatarName"><%= current_user.name %></div>
        </div>
        <ul>
          <li><a href="#"><span class="icon-settings"></span>Configurações</a></li>
          <li><a href="profile.html"><span class="icon-user"></span>Perfil</a></li>
          <li><a href="#"><span class="icon-bell"></span>Notificações <span class="badge pull-right bg-red">5</span></a></li>
          <li class="divider"></li>
          <li>
            <%= link_to content_tag(:span, '', class: 'icon-power' ) + "Sair", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>
    <div class="headerNotifyWraper">
      <a href="#" class="headerNotify dropdown-toggle" data-toggle="dropdown">
        <span class="notifyIcon icon-bell"></span>
        <span class="counter">5</span>
      </a>
      <div class="dropdown-menu pull-right notifyMenu" role="menu">
        <div class="notifyHeader">
          <span>Notificações</span>
          <a href="#" class="notifySettings icon-settings"></a>
          <div class="clearfix"></div>
        </div>
        <ul class="notifyList">
          <li>
            <a href="#">
              <img class="avatar pull-left" src="assets/images/avatar-1.jpg" alt="avatar">
              <div class="pulse border-grey"></div>
              <div class="notify pull-left">
                <div class="notifyName">Sed ut perspiciatis unde</div>
                <div class="notifyTime">5 minutes ago</div>
              </div>
              <div class="clearfix"></div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="notifyRound notifyRound-red fa fa-envelope-o"></div>
              <div class="pulse border-red"></div>
              <div class="notify pull-left">
                <div class="notifyName">Lorem Ipsum is simply dummy text</div>
                <div class="notifyTime">20 minutes ago</div>
              </div>
              <div class="clearfix"></div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="notifyRound notifyRound-yellow fa fa-heart-o"></div>
              <div class="pulse border-yellow"></div>
              <div class="notify pull-left">
                <div class="notifyName">It is a long established fact</div>
                <div class="notifyTime">2 hours ago</div>
              </div>
              <div class="clearfix"></div>
            </a>
          </li>
          <li>
            <a href="#">
              <div class="notifyRound notifyRound-magenta fa fa-paper-plane-o"></div>
              <div class="pulse border-magenta"></div>
              <div class="notify pull-left">
                <div class="notifyName">There are many variations</div>
                <div class="notifyTime">1 day ago</div>
              </div>
              <div class="clearfix"></div>
            </a>
          </li>
        </ul>
        <a href="#" class="notifyAll">See All</a>
      </div>
    </div>
    <a href="#" class="mapHandler"><span class="icon-map"></span></a>
    <div class="clearfix"></div>
  </div>

  <!-- Left Side Navigation -->

  <div id="leftSide">
    <nav class="leftNav scrollable">
      <div class="search">
        <span class="searchIcon icon-magnifier"></span>
        <input type="text" placeholder="Procurar por problemas...">
        <div class="clearfix"></div>
      </div>
      <ul>
        <li>
          <%= link_to content_tag(:span, '', class: 'navIcon icon-plus' ) + content_tag(:span, 'Novo', class: 'navLabel' ), new_problema_path, method: 'get' %>
        </li>
        <li><a href="index.html"><span class="navIcon icon-compass"></span><span class="navLabel">Meus</span></a></li>
        <li><a href="index.html"><span class="navIcon icon-clock"></span><span class="navLabel">Recentes</span></a></li>
        <li><a href="index.html"><span class="navIcon icon-heart"></span><span class="navLabel">Favoritos</span></a></li>
        <li class="hasSub">
          <a href="#"><span class="navIcon icon-pointer"></span><span class="navLabel">Outros</span><span class="fa fa-angle-left arrowRight"></span></a>
          <ul class="colors">
            <li><a href="index.html">Mais votados <span class="fa icon-right"></span></a></li>
            <li><a href="index.html">Mais proximos <span class="fa icon-right"></span></a></li>
            <li><a href="index.html">Mais vistos <span class="fa icon-right"></span></a></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
  <div class="closeLeftSide"></div>
  <%= yield %>
</div>
</body>
<!--<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDof2nyTF4EdM7UzYT1ISsZa2bc5VUms6s"></script>-->
<%= javascript_include_tag 'location' %>
<%= javascript_include_tag 'init' %>
<script src="http://maps.googleapis.com/maps/api/js?sensor=true&amp;libraries=geometry&amp;libraries=places" type="text/javascript"></script>
<%= javascript_include_tag 'infobox' %>
<%= javascript_include_tag 'app' %>
</html>